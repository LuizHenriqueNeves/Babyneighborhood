<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCriarGrupo"
    android:orientation="vertical"
    android:background="@drawable/background2">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editNomeGrupo"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:hint="Nome do Grupo"
        android:textAlignment="center"
        android:maxLines="1"
        android:background="@drawable/rounded_white"
        android:textSize="14sp"
        />


    <EditText
        android:id="@+id/editComent"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:hint="Descrição do grupo!"
        android:textAlignment="center"
        android:background="@drawable/rounded_text_box"
        android:textSize="12sp" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btdRegistrar"
            android:layout_width="15dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="Registrar"

            android:background="@drawable/btd_logar"
            android:textColor="@color/branco"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/btdCancelar"
            android:layout_width="15dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:background="@drawable/btd_cancelar"
            android:textColor="@color/branco"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"/>

    </LinearLayout>

</LinearLayout>